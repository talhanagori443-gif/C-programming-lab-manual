#include <stdio.h>

int main() {
    char str[100];
    int i = 0;

    printf("Enter a string: ");
    scanf("%[^\n]", str);   // reads string including spaces

    while (str[i] != '\0') {
        i++;                // count characters until null terminator
    }

    printf("Length of the string = %d\n", i);

    return 0;
}
