#include <stdio.h>

int main() {
    char str[100];
    int i = 0, j, length = 0, flag = 0;

    printf("Enter a string: ");
    scanf("%[^\n]", str);

    // Find length manually
    while (str[length] != '\0') {
        length++;
    }

    j = length - 1;

    // Check palindrome
    while (i < j) {
        if (str[i] != str[j]) {
            flag = 1;
            break;
        }
        i++;
        j--;
    }

    if (flag == 0)
        printf("The string is a palindrome.\n");
    else
        printf("The string is NOT a palindrome.\n");

    return 0;
}
